<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cvDaño"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/separacion_tarjeta">

        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/grieta_esquina"
            android:layout_gravity="center_horizontal"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvDañoCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grieta_esquina"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvParentesisAbre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textSize="@dimen/nombre_cardview"
                android:layout_marginLeft="@dimen/left"
                android:layout_below="@id/tvDañoCV"
                />
            <TextView
                android:id="@+id/tvdñCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g_e"
                android:textSize="@dimen/nombre_cardview"
                android:layout_below="@id/tvDañoCV"
                android:layout_toRightOf="@id/tvParentesisAbre"
                />
            <TextView
                android:id="@+id/tvParentesisCierra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="@dimen/nombre_cardview"
                android:layout_below="@id/tvDañoCV"
                android:layout_toRightOf="@id/tvdñCV"
                />



        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>